set -s escape-time 1
set -g base-index 1
set -g mode-keys vi
bind r source-file ~/.tmux.conf

set -g display-time 1100

# mouse behavior

setw -g mouse on
set-option -g mouse on

#Tc - true color support
#set-option -ga terminal-overrides ",xterm-termite:Tc"
#set-option -ga terminal-overrides ",$TERM:Tc"
set-option -g default-terminal "xterm-termite"
set-option -ga terminal-overrides "xterm-termite:Tc"


unbind C-b
set -g prefix `
bind ` send-prefix


#vim like copy paste
unbind Escape
bind-key -T copy-mode-vi Escape send -X cancel
unbind p
bind p paste-buffer
bind-key -T copy-mode-vi 'v' send -X begin-selection
bind-key -T copy-mode-vi 'y' send -X copy-selection-and-cancel


#pane manipulate
bind -n M-H select-pane -L
bind -n M-J select-pane -D
bind -n M-K select-pane -U
bind -n M-L select-pane -R

bind -n M-Y resize-pane -L 5
bind -n M-U resize-pane -D 5
bind -n M-I resize-pane -U 5
bind -n M-O resize-pane -R 5


bind-key -r "<" swap-window -t -1
bind-key -r ">" swap-window -t +1

bind -n M-N resize-pane -L 1
bind -n M-M resize-pane -D 1
bind -n M-< resize-pane -U 1
bind -n M-> resize-pane -R 1

bind h split-window -h
bind v split-window

unbind 1
unbind 2
unbind 3
unbind 4
unbind 5
unbind 6
unbind 7
unbind 8
unbind 9
unbind 0

bind -n M-1 select-window -t 1
bind -n M-2 select-window -t 2
bind -n M-3 select-window -t 3
bind -n M-4 select-window -t 4
bind -n M-5 select-window -t 5
bind -n M-6 select-window -t 6
bind -n M-7 select-window -t 7
bind -n M-8 select-window -t 8
bind -n M-9 select-window -t 9

unbind f
bind f resize-pane -Z
unbind n
unbind o

unbind "'"
bind "'" select-pane -m

unbind S-Pageup
unbind S-Pagedown


#POWERLINE/STATUS CONFIG
set-option -g status on
set-option -g status-interval 2
set-option -g status-justify "centre"
set-option -g status-left-length 60
set-option -g status-right-length 90
set-option -g status-left "#(~/.tmux/plugins/tmux-powerline/powerline.sh left)"
set-option -g status-right "#(~/.tmux/plugins/tmux-powerline/powerline.sh right)"


#VIEW/THEME CONFIG
# Status update interval
# Basic status bar colors
set -g status-style "fg=#BBFFDD, bg=#101010"

# Left side of status bar
set -g status-left-style "fg=#BBFFDD, bg=#303030"
set -g status-left-length 40
set -g status-left \
	"#[fg=##FFFFFF,bg=#FFA0D0,bold]#{prefix_highlight}\
	#[fg=#222233,bg=colour15,bold] #H \
	#[fg=colour15,bg=#99BBBB]\
	#[fg=#112233,bg=#99BBBB] #(whoami) \
	#[fg=#99BBBB,bg=#101010]"

# Right side of status bar
set -g status-right-bg colour233
set -g status-right-fg colour243
set -g status-right-length 150
set -g status-right \
	"#[fg=#505656,bg=#101010]\
	#[fg=##FFFFFF,bg=#505656, bold] %H:%M:%S \
	#[fg=#99BBBB,bg=#505656]\
	#[fg=#000000,bg=#99BBBB] %d-%b-%y \
	#[fg=##FFA0D0,bg=#99BBBB]\
	#[fg=#000000,bg=##FFA0D0,bold] load average:#(uptime | awk -F'[a-z]:' '{ print $2 }')"

# Window status
set -g window-status-format " #W "
set -g window-status-current-format " #W "

# Current window status
set -g window-status-current-style "fg=#000000, bg=#99BBBB, bold"
#set -g window-status-style "fg=#FFFFFF, bg=#505656"
set -g window-status-style "fg=#FFDDDD, bg=#505656"

# Pane border
#set -g pane-border-bg default
set -g pane-border-style 'fg=#505656'

# Active pane border
set -g pane-active-border-style "fg=colour15"

# Pane number indicator
#set -g display-panes-colour colour233
set -g display-panes-colour colour15
set -g display-panes-active-colour colour4

# Clock mode
set -g clock-mode-colour colour15
set -g clock-mode-style 24

# Message
set -g message-style "fg=#FFDDDD, bg=#505656, bold"

# Command message
set -g message-command-style "fg=#000000, bg=#FFA0D0, bold"

# Mode
set -g mode-style "fg=#000000, bg=colour3, bold"

#PLUGINS
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'erikw/tmux-powerline'

set -g @plugin 'fasterbru/tmux-prefix-highlight'
set -g @prefix_highlight_fg '#000000'
set -g @prefix_highlight_bg '##FFA0D0'
set -g @prefix_highlight_copy_mode_attr 'fg=#000000, bg=##FFA0D0'
set -g @prefix_highlight_mode_prefix 'PREFIX'
set -g @prefix_highlight_mode_copy ' COPY '
set -g @prefix_highlight_mode_normal 'NORMAL'
set -g @prefix_highlight_output_prefix ''
set -g @prefix_highlight_output_suffix ''

set -g @plugin 'nhdaly/tmux-better-mouse-mode'
set-option -g mouse on
set -g @scroll-down-exit-copy-mode "off"
set -g @scroll-without-changing-pane "on"
set -g @emulate-scroll-for-no-mouse-alternate-buffer "on"

#tmux and vim navigation
#may be later
#have no time now
#set -g @plugin 'christoomey/vim-tmux-navigator'

run '~/.tmux/plugins/tpm/tpm'
