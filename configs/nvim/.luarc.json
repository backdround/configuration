{
  "$schema": "https://raw.githubusercontent.com/luals/vscode-lua/master/setting/schema.json",
  "Lua": {
    "diagnostics": {
      "globals": [
        "vim",
        "LightWeight",
        "nvimpager",
      ],
      "disable": [
        "missing-fields",
        "duplicate-set-field",
        "duplicate-doc-field",
      ]
    },
    "runtime": {
      "version": "LuaJIT",
    },
  }
}
