set $mod Mod4


############################################################
# General config

floating_modifier $mod
popup_during_fullscreen smart
force_focus_wrapping yes
font pango:FantasqueSansMono Nerd Font 12


#  I3
exec_always --no-startup-id systemctl --user start i3-gaps.target
#  Polybar
exec_always --no-startup-id $HOME/.config/polybar/startup
#  Mouse hider
exec_always --no-startup-id pkill unclutter ; unclutter --timeout 1 --jitter 30 --ignore-scrolling &


# Main binds
bindcode $mod+Shift+24 kill
bindcode $mod+41 fullscreen toggle
bindcode $mod+46 exec --no-startup-id ~/.local/bin/screen_switcher.py

# Floating
bindcode $mod+54 floating toggle
bindcode $mod+55 focus mode_toggle

# Scratchpad
bindcode $mod+20 move scratchpad
bindcode $mod+21 scratchpad show

# I3
bindcode $mod+52 reload
bindcode $mod+53 restart



############################################################
# CUSTOM BINDS

#  Translate
bindcode $mod+38 exec --no-startup-id .local/bin/translate_notify
#  D&D screens
bindcode $mod+39 exec --no-startup-id ~/.local/bin/dragon_screen ~/other/screens
#  Dmenu
bindcode $mod+40 exec --no-startup-id rofi -normal-window -modi drun -show drun

# Screenshots
bindsym --release Print exec --no-startup-id flameshot screen -c -p ~/other/screens
bindsym --release $mod+Print exec --no-startup-id flameshot gui -p ~/other/screens
bindsym --release Control+Print exec --no-startup-id flameshot full -c -p ~/other/screens
bindsym --release Shift+Print exec --no-startup-id ~/.local/bin/screenshot_window

# Volume
bindsym Mod5+XF86AudioRaiseVolume exec --no-startup-id pulseaudio-ctl up
bindsym Mod5+XF86AudioMute exec --no-startup-id pulseaudio-ctl mute
bindsym Mod5+XF86AudioLowerVolume exec --no-startup-id pulseaudio-ctl down
bindsym XF86AudioRaiseVolume exec --no-startup-id pulseaudio-ctl up
bindsym XF86AudioMute exec --no-startup-id pulseaudio-ctl mute
bindsym XF86AudioLowerVolume exec --no-startup-id pulseaudio-ctl down

# Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 2
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 2



############################################################
# Workspaces

# Workspace names
set $wsleft1  "1: Web"
set $wsleft2  "2: Build"
set $wsleft3  "3: <"
set $wsleft4  "4: Left"
set $wsright1 "5: Code"
set $wsright2 "6: Other"
set $wsright3 "7: >"
set $wsright4 "8: Right"

# Monitors
set $left_monitor --left_monitor--
set $right_monitor --right_monitor--
workspace $wsleft1  output $left_monitor
workspace $wsleft2  output $left_monitor
workspace $wsleft3  output $left_monitor
workspace $wsleft4  output $left_monitor
workspace $wsright1 output $right_monitor
workspace $wsright2 output $right_monitor
workspace $wsright3 output $right_monitor
workspace $wsright4 output $right_monitor

# Switch to workspace
bindcode $mod+44 workspace $wsleft1
bindcode $mod+59 workspace $wsleft2
bindcode $mod+57 workspace $wsleft3
bindcode $mod+10 workspace $wsleft4
bindcode $mod+45 workspace $wsright1
bindcode $mod+60 workspace $wsright2
bindcode $mod+58 workspace $wsright3
bindcode $mod+11 workspace $wsright4

# Move focused container to workspace
bindcode $mod+Shift+44 move container to workspace $wsleft1
bindcode $mod+Shift+59 move container to workspace $wsleft2
bindcode $mod+Shift+57 move container to workspace $wsleft3
bindcode $mod+Shift+10 move container to workspace $wsleft4
bindcode $mod+Shift+45 move container to workspace $wsright1
bindcode $mod+Shift+60 move container to workspace $wsright2
bindcode $mod+Shift+58 move container to workspace $wsright3
bindcode $mod+Shift+11 move container to workspace $wsright4

# Focus keys
bindcode $mod+29 focus left
bindcode $mod+30 focus down
bindcode $mod+31 focus up
bindcode $mod+32 focus right

# Move focused window
bindcode $mod+Shift+29 move left 50px
bindcode $mod+Shift+30 move down 50px
bindcode $mod+Shift+31 move up 50px
bindcode $mod+Shift+32 move right 50px



############################################################
# Colors

set_from_resource  $black  i3wm.color0 #1D1E26
set_from_resource  $gray   i3wm.color8 #6b7089

set_from_resource  $green  i3wm.color2 #6aa28c
set_from_resource  $cyan   i3wm.color6 #89b8c2
set_from_resource  $red    i3wm.color1 #bf5c80

#class                  border background text   indicator child_border
client.focused          $black $black     $cyan  $cyan     $cyan
client.focused_inactive $black $black     $cyan  $gray     $gray
client.unfocused        $black $black     $cyan  $gray     $gray
client.urgent           $black $black     $cyan  $red      $red
client.placeholder      $black $black     $cyan  $gray     $gray

client.background       $gray



############################################################
# Customization

# Gaps
set $outer -2
set $inner 21

gaps outer $outer
gaps inner $inner

gaps top 0
gaps bottom 1

bindcode $mod+18 gaps inner current set $inner
bindcode $mod+19 gaps inner current set 5

# Border
default_border pixel 2
default_floating_border pixel 2
bindcode $mod+17 border toggle



############################################################
# Session

bindcode $mod+24 mode "session"
mode "session" {
  bindcode 24 exec --no-startup-id systemctl --user stop i3-gaps.target; exec i3-msg exit ; mode "default"
  bindcode 25 exec --no-startup-id i3lock-fancy; mode "default"
  bindcode 26 exec --no-startup-id "systemctl --user stop i3-gaps.target; sleep 0.5; systemctl poweroff"; mode "default"
  bindcode 27 exec --no-startup-id "systemctl --user stop i3-gaps.target; sleep 0.5; systemctl reboot"; mode "default"

  bindsym Escape mode "default"
  bindsym Mod5+Escape mode "default"
}



############################################################
# Launcher

bindcode $mod+25 mode "launcher"
mode "launcher" {
  #terminal
  bindcode 44 exec --no-startup-id i3-sensible-terminal; mode "default"

  #qutebrowser
  bindcode 45 exec --no-startup-id ~/.local/bin/qute_do.sh; mode "default"

  #google-chrome
  bindcode 46 exec --no-startup-id google-chrome-unstable; mode "default"

  #pulse audio
  bindcode 47 exec pavucontrol; mode "default"

  # change layout
  bindcode $mod+43 split h
  bindcode $mod+44 split v
  bindcode $mod+45 layout stacking
  bindcode $mod+46 layout tabbed
  bindcode $mod+59 focus child
  bindcode $mod+60 focus parent

  # change focus
  bindcode 29 focus left
  bindcode 30 focus down
  bindcode 31 focus up
  bindcode 32 focus right

  # close window
  bindcode 53 kill; mode "default"

  bindsym Escape mode "default"
  bindsym Mod5+Escape mode "default"
}



############################################################
# Windows

# Telegram
bindcode $mod+26 [class="TelegramDesktop"] scratchpad show
for_window [class="TelegramDesktop"] floating enable
for_window [class="TelegramDesktop"] move position --position-telegram--
for_window [class="TelegramDesktop"] resize set --size-telegram--
for_window [class="TelegramDesktop"] sticky enable
for_window [class="TelegramDesktop"] move scratchpad

# Dropdown terminal
bindcode $mod+43 [class="ddterminal-desktop"] scratchpad show
for_window [class="ddterminal-desktop"] floating enable
for_window [class="ddterminal-desktop"] sticky enable
for_window [class="ddterminal-desktop"] move position --position-dropdown--
for_window [class="ddterminal-desktop"] resize set --size-dropdown--
for_window [class="ddterminal-desktop"] move scratchpad

# Ranger
bindcode $mod+42 [class="ranger-desktop"] scratchpad show
for_window [class="ranger-desktop"] floating enable
for_window [class="ranger-desktop"] sticky enable
for_window [class="ranger-desktop"] move position --position-ranger--
for_window [class="ranger-desktop"] resize set --size-ranger--
for_window [class="ranger-desktop"] move scratchpad

# Qutebrowser editor
for_window [class="qute_editor"] floating enable
for_window [class="qute_editor"] resize set --size-qutebrowser_editor--

# Tiling ignore
for_window [class="Rofi"] floating enable
for_window [class="octa"] floating enable
for_window [class="ui"] floating enable
for_window [class="chart_manager_test"] floating enable
for_window [class="app"] floating enable
for_window [class="qmllivebench"] floating enable
for_window [class="QML Live Bench"] floating enable

