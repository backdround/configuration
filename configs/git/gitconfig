[core]
  excludesfile = ~/.gitignore_global
  pager = diff-so-fancy | less --tabs=4 -RFX

[alias]
  st = status
  ch = checkout
  br = branch
  cm = commit
  lb = log --oneline --graph --all
  l = log --oneline --graph --all -n 15

[diff-so-fancy]
  markEmptyLines = false

[color "diff"]
  meta = yellow
  frag = magenta bold
  whitespace = red reverse
  commit = magenta

[color]
  status = always
  ui = always
