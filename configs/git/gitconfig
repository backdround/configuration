[user]
  name = Vlad Chepaykyn
  email = backdround@yandex.ru

[core]
  excludesfile = ~/.gitignore_global
  pager = diff-so-fancy --colors | ~/.local/bin/nvimpager.sh

[alias]
  st = status
  ch = checkout
  br = branch
  cm = commit
  ll = log --oneline --graph --all
  l = log --oneline --graph --all -n 15

[pull]
  ff = only

[diff-so-fancy]
  markEmptyLines = false

[color "diff"]
  meta = yellow
  frag = magenta bold
  whitespace = red reverse
  commit = magenta

[color]
  status = always
  ui = always
[init]
	defaultBranch = main
