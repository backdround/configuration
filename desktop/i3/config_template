#language
bindsym ISO_Next_Group exec --no-startup-id pkill -RTMIN+1 i3blocks

#volume
bindsym Group2+XF86AudioRaiseVolume exec --no-startup-id pactl -- set-sink-volume 0 +5%; exec --no-startup-id pkill -RTMIN+10 i3blocks
bindsym Group2+XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle; exec --no-startup-id pkill -RTMIN+10 i3blocks
bindsym Group2+XF86AudioLowerVolume exec --no-startup-id pactl -- set-sink-volume 0 -5%; exec --no-startup-id pkill -RTMIN+10 i3blocks

