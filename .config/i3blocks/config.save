# i3blocks config file
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# align
# color
# background
# border
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
command=~/Scripts/i3blocks/$BLOCK_NAME
align=center
separator=false
separator_block_width=0
markup=pango

[translate]
interval=0
background=#060606FF
signal=11
border=#FFFFFFFF
border_left=0
border_right=0
border_top=1
border_bottom=1

[separator1]
full_text=<span font='FontAwesome 14'></span>
color=#000000
background=#00000060
border=#0к0000060
border_left=40
border_right=0
border_top=0
border_bottom=0

[volume label]
color=#FFFFFF
full_text=<span font='FontAwesome'>&#xf028;</span>
background=#000000
border=#000000
border_left=4
border_right=3

[volume]
interval=10
signal=10
align=center
min_width=40
background=#000000

[separator1]
full_text=<span font='FontAwesome 14'></span>
color=#112222
background=#0000000

[memoryO label]
color=#FFFFFF
full_text=<span font='FontAwesome 12'></span>
background=#112222
border=#112222
border_left=6
border_right=3

[memoryO]
interval=2
background=#112222
border=#112222
border_right=10

[memoryS label]
color=#FFFFFF
full_text=<span font='FontAwesome 12'></span>
background=#112222
border=#112222
border_left=3
border_right=3

[memoryS]
interval=2
background=#112222
border=#112222
border_right=10

[cpu_usage label]
